<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<title>Calling Table</title>
		<script src='https://cdn.tailwindcss.com'></script>
		<style>
			#data-table > tbody > tr:nth-child(2) { background-color: #beeadf; }
			#data-table { text-align: left; } @media (max-width: 640px) { #data-table
			{ display: flex; flex-direction: column; gap: 1rem; /* Adds some spacing
			between stacked cards */ } /* Hide the first item (header card) */
			#data-table > tbody > tr > td:nth-child(2) { font-weight: bold; }
			#data-table > tbody > tr:first-child { display: none; } #data-table tr {
			display: flex; flex-direction: column; padding: 1rem; border: 1px solid
			#ccc; border-radius: 0.5rem; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			background-color: #fff; margin-bottom: 1rem; } #data-table th, #data-table
			td { width: 100%; margin: 0; padding: 0.5rem; } .data-header {
			font-weight: bold; } } /* Add styles for the table wrapper */
			.table-wrapper { overflow-x: auto; max-width: 100%; /* Ensure the table
			wrapper does not exceed the screen width */ } #data-table > tbody >
			tr:hover { background-color: #f1f1f1; }
		</style>
	</head>

	<body class='bg-gray-100 min-h-screen flex items-center justify-center'>

		<div class='bg-white p-6 rounded-lg shadow-md max-w-7xl'>
			<h1 class='text-2xl font-bold mb-4' id='table-title'>Today's Calls</h1>
			<table id='data-table' class='w-full table-fixed'>
				<!-- Table content will be generated here using JavaScript -->
			</table>
		</div>
		<script>
			const tableDataJson = decodeURIComponent('{{data}}');
		</script>
		<script src='/call.js'></script>

	</body>

</html>